<div class="row">
  <div class="col">
    <header class="page-header">
      <h1 class="page-title">Dashboard</h1>
    </header>
  </div>
</div>
<div class="row">
  <div class="col-4">
    <div class="box">
      <div class="box-header">
        Financials
      </div>
      <% if true %>
        <div class="box-content">
          <p>Total billable hours:&nbsp;<%= number_with_precision(Activity.where(user: current_user).sum(&:duration), precision: 2) %> (<%= number_with_precision(Activity.where(user: current_user, date: 1.month.ago..Time.now).sum(&:duration), precision: 2) %> since <%= 1.month.ago %>)</p>
          <p>Total fees:&nbsp;<%= fee(Activity.where(user: current_user).sum("duration * fee")) %> (<%= fee(Activity.where(user: current_user, date: 1.month.ago..Time.now).sum("duration * fee")) %> since <%= 1.month.ago %>)</p>
        </div>
      <% else %>
        <%= image_tag('undraw/void.svg', class: 'void') %>
      <% end %>
    </div>
  </div>

<div class="row">
  <div class="col">
    <header class="page-header">
      <h1 class="title"><%= t('.title') %></h1>
    </header>
  </div>
</div>

<div class="row">
  <div class="col-2">
    <%= render 'dashboard_sidebar' %>
  </div>
  <section class="col-6">
    <div class="row">
      <div class="col">
        <%= render 'users/profile', user: current_user %>
        <%= render 'statistics' %>
      </div>

      <div class="col">
        <%= render 'deadlines', deadlines: @deadlines, limit: 5 %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= render 'timeline' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= render 'news' %>
      </div>
    </div>
  </section>
</div>

<div class="homepage">
    <div class="row">
      <div class="col-4 col-offset-2">
        <div class="box login-form">
          <div class="box-header">
            <h1>Log in</h1>
          </div>
          <div class="box-content">
            <form class="form">
              <div class="input-group">
                <input type="text" autocorrect="off" autocapitalize="off" spellcheck="false" placeholder="Username" />
                <%= icon_tag('person') %>
              </div>
              <div class="input-group">
                <input type="password" autocorrect="off" autocapitalize="off" spellcheck="false" placeholder="Password" />
                <%= icon_tag('key') %>
              </div>
              <div class="input-group">
                <div class="button blue">Log in</div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-4 col-offset-2">
        <div class="box">
          <div class="box-content">
            <p>Don't have an account? <a href="#">Click here to sign up</a>.</p>
          </div>
        </div>
      </div>
    </div>
</div>

<div id="particles-js"></div>

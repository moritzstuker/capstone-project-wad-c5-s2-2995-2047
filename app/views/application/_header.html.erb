<header class="site-header">
  <div class="container">
    <div class="row">
      <div class="col-2">
        <%= link_to_if(is_logged_in?, icon_tag('empire'), projects_path, class: 'site-logo') do |name| %>
          <%= link_to(name, root_path) %>
        <% end %>
      </div>

      <div class="col-4">
        <%= render 'search_form' if is_logged_in? %>
      </div>

      <div class="col-2">
        <%= is_logged_in? ? render('header_links') : link_to('Log in', login_path) %>
      </div>
    </div>
  </div>
</header>

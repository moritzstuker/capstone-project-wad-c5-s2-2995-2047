<div class="box">
  <div class="box-header">
    <% if deadlines.count > limit %>
      <%= t('.deadlines_with_limit', limit: limit) %>
    <% else %>
      <%= t('.deadlines') %>
    <% end %>
  </div>
  <% if deadlines.count > 0 %>
    <ul class="card-list">
      <% deadlines.take(limit).sort_by(&:date).each do |deadline| %>
        <%= render 'deadlines/card', deadline: deadline %>
      <% end %>
    </ul>
  <% else %>
    <%= image_tag('void.svg', class: 'void') %>
  <% end %>
</div>

<ul class="card-list">
  <% @project.deadlines.sort_by(&:date).each do |deadline| %>
  <li class="card">
    <%= link_to deadline.project, class: 'block-link' do %>
    <div class="card-header">
      <%= deadline.label %>
      <span class="push tag"><%= i18n_enum(deadline, 'category') %></span>
    </div>
    <div class="card-content">
        <%= dot_label(deadline.date.strftime("%d.%m.%Y"), color_by_urgency(get_urgency_of_date(deadline.date))) %>
      Assigned to
      <%= avatar_tag_for(deadline.assignee) %>
    </div>
    <% end %>
  </li>
  <% end %>
</ul>

<section class="box">
  <header class="box-header">
    <h2 class="heading">Timesheet</h2>
  </header>
  <% if @activities.exists? %>
  <table class="box-content">
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Label</th>
        <th>Duration</th>
        <th>Fee</th>
        <th>Assignee</th>
      </tr>
    </thead>
    <tbody>
      <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.date.strftime("%d.%m.%Y") %></td>
        <td><%= activity.category %></td>
        <td><%= activity.label %></td>
        <td><%= number_with_precision(activity.duration, precision: 2) %></td>
        <td class="no-wrap"><%= fee(activity.fee) %></td>
        <td><%= link_to build_label(activity.user.contact, :name), activity.user %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <div class="box-content">
    <%= image_tag('undraw/void.svg', class: 'void') %>
  </div>
  <% end %>
</section>

<% if @project.parties.where(role: 'client').count > 0 %>
<div class="col">
  <h3 class="heading">Clients</h3>
  <ul>
    <% @project.parties.where(role: 'client').each do |party| %>
    <li><%= link_to party.combine(:full_name), party %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% if @project.parties.where(role: 'adversary').count > 0 %>
<div class="col">
<h3 class="heading">Adversaries</h3>
<ul>
  <% @project.parties.where(role: 'adversary').each do |party| %>
  <li><%= link_to party.combine(:full_name), party %></li>
  <% end %>
</ul>
</div>
<% end %>

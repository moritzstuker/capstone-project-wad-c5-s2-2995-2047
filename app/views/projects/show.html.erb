<div class="row">
  <div class="col">
    <header class="page-header">
      <h1 class="title">
        <%= link_to t('projects.index.title'), projects_path, class: 'heading' %>
        <span class="mute">&nbsp;&sol;&nbsp;</span>
        <%= @project.label %> (<%= strip_tags(main_parties(@project)) %>)
      </h1>
      <%= render 'edit-box', target: @project %>
    </header>
  </div>
</div>
<div class="row">
  <div class="col-5">
    <section class="box">
      <header class="box-header">
        <h2><%= t('.description') %></h2>
      </header>
      <% if @project.description %>
      <div class="box-content">
        <p><%= @project.description %></p>
      </div>
      <% else %>
      <%= image_tag('undraw/void.svg', class: 'void') %>
      <% end %>
    </section>
    <section class="box">
      <header class="box-header">
        <h2><%= t('.parties') %></h2>
      </header>
      <div class="box-content">
        <div class="row">
          <%= render 'parties' %>
        </div>
      </div>
    </section>
    <% if @deadlines.count > 0 %>
    <div class="box">
      <div class="box-header">
        <h2><%= t('.deadlines') %></h2>
      </div>
      <ul class="card-list">
        <% @deadlines.sort_by(&:date).each do |deadline| %>
          <%= render 'deadline', deadline: deadline %>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="col-3">
    <%= render 'properties' %>
    <%= render 'statistics' %>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= render 'timesheet' %>
  </div>
</div>

<div class="row">
  <div class="col">
    <header class="page-header">
      <h1 class="title">Cases</h1>
      <span class="push button-group"><%= render 'filters' %></span>
    </header>
  </div>
</div>
<section class="row">
  <aside class="col-2">
    <%= render 'sidebar/index' %>
  </aside>
  <div class="col">
    <% if @projects %>
      <ul>
        <% @projects.each do |project| %>
        <li><%= render 'card', project: project %></li>
        <% end %>
      </ul>
      <%= paginate @projects %>
    <% else %>
      <div class="box">
        <%= image_tag('undraw/void.svg', class: 'void') %>
      </div>
    <% end %>
  </div>
</section>


<p id="notice"><%= notice %></p>

<p>
  <strong>Label:</strong>
  <%= @project.label %>
</p>

<p>
  <strong>Reference:</strong>
  <%= @project.reference %>
</p>

<p>
  <strong>Status:</strong>
  <%= @project.status %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Owner:</strong>
  <%= build_name(@project.owner) %>
</p>

<p>
  <strong>Project category:</strong>
  <%= @project.category.label.capitalize %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<section class="box">
  <header class="box-header">
    <h2>Statistics</h2>
  </header>
  <div class="box-content">
    <ul class="no-list">
      <% @project.activities.includes(:user).group_by(&:user).sort.reverse.each do |user| %>
        <li>
          <%= avatar_tag_for(user.first) %> logged <%= pluralize(user.last.count, 'task', plural: 'tasks') %> for <%= fee(user.last.sum(&:fee)) %>
        </li>
      <% end %>
    </ul>
    <hr>
    <p><strong>Total hours:</strong>&nbsp;<%= number_with_precision(@project.activities.sum(&:duration), precision: 2) %></p>
    <p><strong>Total fees:</strong>&nbsp;<%= fee(@project.activities.sum(&:fee) * @project.activities.sum(&:duration)) %></p>
  </div>
</section>

<%= render "document_head" %>

<header>
  <%= render "navbar" %>
</header>

<main class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-2">
        <%= render "menu" %>
      </div>
      <div class="column is-10">
        <header class="level">
          <div class="level-left">
            <div class="level-item">
              <h1 class="title">
                <%= content_for(:dashboard_title) || "Dashboard" %>
              </h1>
            </div>
          </div>

          <!-- Right side -->
          <div class="level-right">
            <div class="level-item">
              <%= content_for(:dashboard_right) %>
            </div>
          </div>
        </header>
        <%= content_for?(:content) ? yield(:content) : yield %>
      </div>
    </div>
  </div>
</main>

<div class="footer">
  <%= render "footer" %>
</div>

<%= render "document_foot" %>

<article>
  <header class="box-header">
    <span class="dot-label">
      <span class="dot-icon <%= urgency_by_date(date) %>"></span>
      <%= date.strftime("%d.%m.%Y") %>
    </span>
  </header>
  <ul>
    <% Deadline.where(date: date).each do |deadline| %>
    <li role="menuitem" class="card"<%= ' disabled' if deadline.completed_at %>>
      <div class="card-header">
        <%= link_to highlight(deadline.label, params[:q]), project_path(deadline.project, anchor: 'deadlines') %>
        <span class="tag">
          <%= deadline.category %>
        </span>
      </div>
      <div class="card-content">
        <span class="small mute">
          <%= icon_tag('repo', class: 'inline') %>
          <%= link_to("#{deadline.project.label}&nbsp;(#{main_parties(deadline.project, false)})".html_safe, deadline.project, class: 'invisible-link') %>
        </span>
      </div>
      <div class="card-footer">
        Assigned to <%= deadline.assignee == current_user ? '<span class="bold">you</span>'.html_safe : link_to(deadline.assignee.combine(:name), deadline.assignee) %>
      </div>
    </li>
    <% end %>
  </ul>
</article>

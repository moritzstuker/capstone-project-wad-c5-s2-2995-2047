<div class="row">
  <div class="col-2">
    <%= render 'sidebar' %>
  </div>
  <section class="col-6">
    <header class="page-header">
      <h1 class="page-title">Contacts</h1>
      <%= render 'filters' %>
    </header>
    <% if @contacts.count > 0 %>
    <ul class="row">
      <% @contacts.each do |contact| %>
      <li class="col-4"><%= render 'card', contact: contact %></li>
      <% end %>
    </ul>
    <% else %>
    <div class="box">
      <%= image_tag('undraw/void.svg', class: 'void') %>
    </div>
    <% end %>
  </section>
</div>

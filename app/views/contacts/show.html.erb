<p id="notice"><%= notice %></p>

<div class="box">

  <div class="tags has-addons">
    <span class="tag">Role</span>
    <% case @contact.role
       when "adversary" %>
       <span class="tag is-danger">
    <% when "client" %>
       <span class="tag is-info">
    <% when "employee" %>
      <span class="tag is-success">
    <% else %>
      <span class="tag is-link">
    <% end %>
    <%= @contact.role %>
    </span>
  </div>

  <p><strong>Name:</strong>&nbsp;<%= @contact.combine(:long_name) %></p>
  <p><strong>Address:</strong><br /><%= @contact.combine(:address) %></p>

  <p>
    <strong>Phone:</strong>
    <%= number_to_phone(@contact.phone, pattern: /(\b(0041|0)|\B\+41)(\s?\(0\))?(\s)?[1-9]{2}(\s)?[0-9]{3}(\s)?[0-9]{2}(\s)?[0-9]{2}\b/, area_code: true) %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @contact.email %>
  </p>

  <p>
    <strong>Profession:</strong>
    <%= @contact.profession %>
  </p>

  <p>
    <strong>Notes:</strong><br />
    <%= @contact.notes %>
  </p>

  <%= link_to 'Edit', edit_contact_path(@contact), class: 'button is-info' %>
</div>

<%= form_with(model: contact, local: true) do |form| %>
<% if contact.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

  <ul>
    <% contact.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :name %>
  <%= form.text_field :name, id: :contact_name %>
</div>

<div class="field">
  <%= form.label :activity %>
  <%= form.text_field :activity, id: :contact_activity %>
</div>

<div class="field">
  <%= form.label :phone %>
  <%= form.text_field :phone, id: :contact_phone %>
</div>

<div class="field">
  <%= form.label :email %>
  <%= form.text_field :email, id: :contact_email %>
</div>

<div class="field">
  <%= form.label :pobox %>
  <%= form.text_field :pobox, id: :contact_pobox %>
</div>

<div class="field">
  <%= form.label :street %>
  <%= form.text_field :street, id: :contact_street %>
</div>

<div class="field">
  <%= form.label :city %>
  <%= form.text_field :city, id: :contact_city %>
</div>

<div class="field">
  <%= form.label :country %>
  <%= form.text_field :country, id: :contact_country %>
</div>

<div class="field">
  <%= form.label :category %>
  <%= form.collection_radio_buttons :category, Contact.categories.keys.map { |category| [category.capitalize, category] }, :second, :first %>
</div>

<div class="field">
  <%= form.label :notes %>
  <%= form.text_area :notes, id: :contact_notes %>
</div>

<div class="field">
  <%= form.label :contact_role_id %>
  <%= form.collection_radio_buttons :contact_role_id, ContactRole.all.order(:label), :id, :friendly_name %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>

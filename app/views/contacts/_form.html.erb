<%= form_with(model: contact, local: true) do |form| %>
<%= render 'form_errors', obj: contact %>

<div class="row">
  <div class="col">
    <div class="box">
      <div class="box-header">
        Basic information
      </div>
      <div class="form-field">
        <%= form.label :name, 'Name*' %>
        <%= form.text_field :name, required: true, id: :contact_name %>
      </div>

      <div class="form-field">
        <%= form.label :category, 'Category*' %>
        <%= form.select :category, Contact.categories.keys.map { |category| [category.capitalize, category] }, { required: true } %>
      </div>

      <div class="form-field">
        <%= form.label :activity, 'Profession/activity' %>
        <%= form.text_field :activity %>
      </div>

      <div class="form-field">
        <%= form.label :email, 'Email' %>
        <%= form.text_field :email, id: :contact_email %>
      </div>

      <div class="form-field">
        <%= form.label :contact_role_id, 'Role*' %>
        <%= form.select :contact_role_id, ContactRole.all.order(:label).collect {|p| [ p.label.capitalize, p.id ] }, { required: true } %>
      </div>

      <div class="form-field">
        <%= form.label :notes %>
        <%= form.text_area :notes, id: :contact_notes %>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="box">
      <div class="box-header">
        Address
      </div>

      <div class="form-field">
        <%= form.label :street %>
        <%= form.text_field :street %>
      </div>

      <div class="form-field">
        <%= form.label :city %>
        <%= form.text_field :city %>
      </div>

      <div class="form-field">
        <%= form.label :country %>
        <%= form.text_field :country %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="box">
      <div class="form-action">
        <span class="mute small">* Required fields.</span>
        <span class="push button-group">
          <%= link_to 'Retour', contact, class: 'button outline' %>
          <%= form.submit 'CrÃ©er contact', class: 'button blue push' %>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>

document.body.addEventListener("ajax:success", (event) => {
  let buttonForm = event.target;
  let buttonCasing = buttonForm.parentNode;

  let button = document.createElement("button");
  button.innerText = "Successfully imported";
  button.type = "button";
  button.name = "button";
  button.setAttribute("class", "button push");
  button.setAttribute("disabled", "disabled");

  buttonCasing.removeChild(buttonForm);
  buttonCasing.appendChild(button);
});

<div class="box">
  <div class="box-header">
    <%= link_to highlight(contact.combine(:full_name), params[:q]), contact %>
    <span class="tag"><%= contact.combine(:category) %></span>
  </div>
  <div class="box-content">
    <p><%= highlight(simple_format(contact.combine(:address)), params[:q]) %></p>
  </div>
  <div class="box-footer">
    <span class="dot-label small">
      <span class="dot-icon" style="background-color: <%= contact.role.color %>"></span>
      <%= contact.role.label.capitalize %>
    </span>
    <% if contact.projects.count > 0 %>
      <span class="keys">Party in <%= pluralize(contact.projects.count, 'case') %></span>
    <% end %>
  </div>
</div>

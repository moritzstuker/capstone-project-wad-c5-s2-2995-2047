<%= link_to contact, class: 'box-link', role: 'article' do %>
  <header class="box-header header heading">
    <span class="link-color"><%= highlight(contact.name, params[:query]) %></span>
    <%= simple_format(contact.category.capitalize, { class: 'push tag' }, wrapper_tag: 'span') %>
  </header>

  <div class="box-content">
    <%= highlight(build_address(contact), params[:query]) %>
  </div>

  <footer class="box-footer">
    <span class="keys"><%= dot_label(contact.role.label.capitalize, contact.role.color) %></span>
    <% if contact.projects.count > 0 %>
      <span class="keys">Party in <%= pluralize(contact.projects.count, 'case') %></span>
    <% end %>
  </footer>
<% end %>

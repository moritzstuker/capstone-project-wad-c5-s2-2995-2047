<div class="card">
  <div class="card-header">
    <a href="#"><%= contact.combine(:long_name) %></a>
  </div>
  <div class="card-content">
    <p><%= contact.combine(:address) %></p>
  </div>
  <div class="card-footer">
    <span class="dot-label">
      <span class="dot <%= "role-#{contact.role}" %>"></span>
      <span><%= contact.role.titleize %></span>
    </span>
    <% if contact.projects.count > 0 %>
      <span class="keys">Party in <%= pluralize(contact.projects.count, 'case') %>.</span>
    <% end %>
  </div>
</div>

<div class="box">
  <div class="box-header">
    <%= t('users.show.profile') %>
  </div>
  <div class="box-content">
    <%= image_tag(user.avatar, class: 'avatar') %>
    <p>
      <strong><%= t('users.attributes.login') %>:</strong>
      <%= user.login %>
    </p>

    <p>
      <strong><%= t('users.attributes.role') %>:</strong>
      <%= user.role.capitalize %>
    </p>

    <p>
      <strong><%= t('users.attributes.email') %>:</strong>
      <%= mail_to user.email %>
    </p>

    <p>
      <strong><%= t('users.attributes.locale') %>:</strong>
      <%= t('language', locale: user.locale) %>
    </p>

    <p>
      <strong><%= t('users.attributes.default_fee') %>:</strong>
      <%= fee(user.default_fee) %>
    </p>

    <p>
      <strong><%= t('users.attributes.projects') %>:</strong>
      <%= link_to user.projects.count, projects_path(owner: user.id) %> (<%= link_to user.projects.where(status: :active).count, projects_path(owner: user.id, status: :active) %> of which are active)
    </p>
  </div>
</div>

      <h1 class="title"><%= @user.name %></h1>
      <%= render 'edit-box', target: @user %>
    </header>
  </div>
</div>

<div class="row">
  <div class="col-2">
    <%= render 'dashboard_sidebar' %>
  </div>
  <div class="col-2">
    <%= render 'users/profile', user: @user %>
  </div>
  <div class="col-4">
    <%= render 'deadlines', deadlines: @user.deadlines, limit: 5 %>
  </div>
</div>

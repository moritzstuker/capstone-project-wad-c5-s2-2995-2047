<%= render 'flash' if flash.any? %>

<section class="container">
  <div class="columns">
    <div class="column is-2">

      <aside class="menu">
        <p class="menu-label">
          General
        </p>
        <ul class="menu-list">
          <li><a>Overview</a></li>
          <li><a>Deadlines</a></li>
          <li><a>Account</a></li>
        </ul>
        <p class="menu-label">
          Cases
        </p>
        <ul class="menu-list">
          <li><a>Overview</a></li>
          <li><a>Cloud Storage</a></li>
          <li><a>Authentication</a></li>
        </ul>
        <p class="menu-label">
          Time management
        </p>
        <ul class="menu-list">
          <li><a>Payments</a></li>
          <li><a>Transfers</a></li>
          <li><a>Balance</a></li>
        </ul>
        <p class="menu-label">
          Contacts
        </p>
        <ul class="menu-list">
          <li><a>Payments</a></li>
          <li><a>Transfers</a></li>
          <li><a>Balance</a></li>
        </ul>
      </aside>

    </div>
    <div class="column is-10">

      <section class="hero is-small is-info">
        <div class="hero-body">
          <p class="title">
            Hello <%= @user.name %>!
          </p>
        </div>
      </section>

      <div class="box">
        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <input class="input" type="email" placeholder="e.g. alex@example.com">
          </div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input" type="password" placeholder="********">
          </div>
        </div>

        <button class="button is-primary">Sign in</button>
      </div>

      <div class="content">

        <h1 class="title is-4 has-text-centered">Your data</h1>
        <hr>

        <p>
          <strong>Username:</strong>
          <%= @user.username %>
        </p>

        <p>
          <strong>Name:</strong>
          <%= @user.name %>
        </p>

        <p>
          <strong>Role:</strong>
          <%= @user.role %>
        </p>

        <p>
          <strong>Avatar:</strong>
          <%= @user.avatar %>
        </p>

        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Back', users_path %>

      </div>
    </div>
  </div>
</section>

<%= form_with(model: user, local: true) do |form| %>
<%= render 'form_error', obj: user %>

  <div class="field">
    <%= form.label :login %>
    <%= form.text_field :login, id: :user_login %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :password_digest %>
    <%= form.text_field :password_digest, id: :user_password_digest %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.text_field :avatar, id: :user_avatar %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :locale %>
    <%= form.text_field :locale, id: :user_locale %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.number_field :role, id: :user_role %>
  </div>

  <div class="field">
    <%= form.label :default_fee %>
    <%= form.text_field :default_fee, id: :user_default_fee %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

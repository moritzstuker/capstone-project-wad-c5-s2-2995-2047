<%= form_with(model: @user, local: true) do |form| %>

<%= render partial: 'error', locals: { model: @user } %>

<div class="field">
  <%= form.label :login, 'E-mail', required: true, class: 'label' %>
  <div class="control has-icons-left">
    <%= form.text_field :login, id: :user_login, required: true, class: 'input' %>
    <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
  </div>
</div>

<div class="field">
  <%= form.label :password, 'Password', required: true, class: 'label' %>
  <div class="control has-icons-left">
    <%= form.password_field :password, id: :user_password, required: true, class: 'input' %>
    <span class="icon is-small is-left"><i class="fas fa-lock"></i></span>
  </div>
</div>

<div class="field">
  <%= form.label :first_name, 'First name', class: 'label' %>
  <div class="control has-icons-left">
    <%= form.text_field :first_name, id: :user_first_name, class: 'input' %>
    <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
  </div>
</div>

<div class="field">
  <%= form.label :last_name, 'Last name', required: true, class: 'label' %>
  <div class="control has-icons-left">
    <%= form.text_field :last_name, id: :user_last_name, required: true, class: 'input' %>
    <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
  </div>
</div>

<div class="field">
  <p class="help"><span class="asterisk">*</span> required fields.</p>
</div>

<div class="field">
  <div class="control">
    <%= form.submit 'Sign up', class: 'button is-info is-fullwidth' %>
  </div>
</div>

<% end %>
